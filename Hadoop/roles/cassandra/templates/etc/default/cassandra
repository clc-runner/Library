
# Cassandra environment variables

export CASSANDRA_HOME=/{{install_dir}}/cassandra
export CASSANDRA_CONF=/etc/cassandra
export CASSANDRA_INCLUDE=/{{conf_dir}}/cassandra.in.sh


# Arguments for the daemon:

export DAEMON_PROG=/{{install_dir}}/cassandra/bin/cassandra
export DAEMON_PROCNAME=org.apache.cassandra
